<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- 결제 방법 섹션 -->
    <TextView
        android:id="@+id/paymentMethodTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제 방법"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- 결제 방법 목록 -->
    <LinearLayout
        android:id="@+id/paymentMethodsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/paymentMethodTitle"
        android:layout_marginTop="16dp"
        android:padding="16dp">

        <!-- 첫 번째 행: 신용-체크카드 중앙 배치 -->
        <Button
            android:id="@+id/btnCreditCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="신용-체크카드"
            android:textSize="16sp"
            android:background="@drawable/rounded_button_with_border"
            android:padding="16dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <!-- 두 번째 행: 계좌이체, 가상계좌, 휴대폰 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnAccountTransfer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="계좌이체"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_with_border"
                android:padding="16dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnVirtualAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="가상계좌"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_with_border"
                android:padding="16dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>

            <Button
                android:id="@+id/btnMobilePayment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="휴대폰"
                android:textSize="16sp"
                android:background="@drawable/rounded_button_with_border"
                android:padding="16dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- 세 번째 행: NPay, KPay, TossPay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/nPay"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/n_pay"
                android:scaleType="fitXY"
                android:background="@drawable/rounded_button_with_border"
                android:layout_marginEnd="4dp"/>

            <ImageButton
                android:id="@+id/kPay"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/k_pay"
                android:scaleType="fitXY"
                android:background="@drawable/rounded_button_with_border"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>

            <ImageButton
                android:id="@+id/tossPay"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/toss_pay"
                android:scaleType="fitXY"
                android:background="@drawable/rounded_button_with_border"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 결제 금액 표시 및 결제 버튼 -->
    <Button
        android:id="@+id/paymentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="150,000원 결제"
        android:background="@drawable/rounded_button_with_border"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:textSize="18sp"
        android:padding="16dp"/>

</RelativeLayout>
