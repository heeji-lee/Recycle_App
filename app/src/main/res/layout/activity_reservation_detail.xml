<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/resv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E0E0E0"
        android:padding="16dp"
        android:id="@+id/layout_product_info"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/text_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품 이름"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/text_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수량"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:padding="16dp"
        android:id="@+id/layout_reservation_date"
        android:layout_below="@id/layout_product_info"
        android:layout_marginBottom="16dp">

        <TextView
        android:id="@+id/text_reservation_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="yyyy-mm-dd"
        android:textSize="16sp"/>

        <Button
        android:id="@+id/btn_edit_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변경"/>
            </LinearLayout>

            <!-- 수거 정보 영역 -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E0E0E0"
        android:padding="16dp"
        android:id="@+id/layout_collection_info"
        android:layout_below="@id/layout_reservation_date"
        android:layout_marginBottom="16dp">

        <TextView
        android:id="@+id/text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소"
        android:textSize="16sp"
        android:paddingBottom="8dp"/>

        <TextView
        android:id="@+id/text_request_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수거 요청사항"
        android:textSize="16sp"/>

        <Button
        android:id="@+id/btn_edit_collection_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변경"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E0E0E0"
    android:padding="16dp"
    android:id="@+id/layout_collection_method"
    android:layout_below="@id/layout_collection_info"
    android:layout_marginBottom="16dp">

        <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_method1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수거방식1"/>

        <RadioButton
            android:id="@+id/radio_method2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수거방식2"/>
        </RadioGroup>
    </LinearLayout>

    <Button
    android:id="@+id/btn_submit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="수거 신청하기"
    android:background="#2196F3"
    android:textColor="@android:color/white"
    android:layout_below="@id/layout_collection_method"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>
